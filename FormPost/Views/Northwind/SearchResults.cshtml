@using FormPost.Models
@model SearchProductsViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SearchResults</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <form action="/northwind/searchresults">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" value="@Model.MinStock" placeholder="Min Stock" name="min" class="form-control" />
                </div>
                <div class="col-md-4">
                    <input type="text" value="@Model.MaxStock" placeholder="Max Stock" name="max" class="form-control" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-dark w-100">Submit</button>
                </div>
            </div>
        </form>
        <div class="row mt-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Quantity Per Unit</th>
                        <th>Unit Price</th>
                        <th>Units In Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.QuantityPerUnit</td>
                            <td>@product.UnitPrice.ToString("C")</td>
                            <td>@product.UnitsInStock</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SearchProducts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <form action="/northwind/searchresults">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" placeholder="Min Stock" name="min" class="form-control" />
                </div>
                <div class="col-md-4">
                    <input type="text" placeholder="Max Stock" name="max" class="form-control" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-dark w-100">Submit</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

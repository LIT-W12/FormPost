@using FormPost.Models
@model EditFurnitureViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAdd</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="p-5 text-center bg-body-tertiary rounded-3">
                @if (Model.Item != null)
                {
                    <form method="post" action="/furniture/update">
                        <div class="col-md-6 offset-md-3">
                            <input value="@Model.Item.Name" type="text" class="form-control" name="name" placeholder="Name" />
                        </div>
                        <div class="col-md-6 offset-md-3 mt-3">
                            <input value="@Model.Item.Color" type="text" class="form-control" name="color" placeholder="Color" />
                        </div>
                        <div class="col-md-6 offset-md-3 mt-3">
                            <input value="@Model.Item.Price" type="text" class="form-control" name="price" placeholder="Price" />
                        </div>
                        <div class="col-md-6 offset-md-3 mt-3">
                            <input value="@Model.Item.QuantityInStock" type="text" class="form-control" name="quantityinstock" placeholder="Quantity In Stock" />
                        </div>

                        <div class="col-md-6 offset-md-3 mt-3">
                            <input type="hidden" name="id" value="@Model.Item.Id" />
                            <button class="btn btn-dark w-100">Update</button>
                        </div>
                    </form>
                }
                else
                {
                    <h1>Not found!</h1>
                }
            </div>

        </div>
    </div>
</body>
</html>
